@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body> 
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <div class="content-wrapper">
                    <div class="float-left">
                        <img src="~/Content/Images/Epsrc_Logo.png" alt="EPSRC Logo" height="82">
                        <img src="~/Content/Images/TSB.jpg" alt="Technology Strategy Board Logo" height="82">
                        <p>&copy;@DateTime.Now.Year.ToString() - Cambridge Centre for Smart Infrastructure and Construction</p>
                    </div>
                </div>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
